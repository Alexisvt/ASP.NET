
@model IEnumerable<_2azInternet.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<div>
    @Html.ActionLink("NEW MOVIE", "New", null, new {@class="btn btn-primary"})
</div>
@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Movies</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Edit", new { movieId = movie.Id })</td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There is no movies yet</p>
}
