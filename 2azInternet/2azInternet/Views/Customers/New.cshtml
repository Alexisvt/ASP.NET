@model _2azInternet.ViewModels.NewCustomerViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(c=> c.Customer.Name)
        @Html.TextBoxFor(customer => customer.Customer.Name, new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c=> c.Customer.Birthdate)
        @Html.TextBoxFor(customer => customer.Customer.Birthdate, new {@class="form-control", type="date"})
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(customer => customer.Customer.IsSubscribedToNewsletter) Subscribed to Newsletter?
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.MembershipTypeId)
        @Html.DropDownListFor(model => model.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"),"Select Membership Type", new {@class="form-control"})
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}
